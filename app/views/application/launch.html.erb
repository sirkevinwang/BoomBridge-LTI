                "&#128029;", // bee
                "&#128030;", // ladybug
                "&#129410;"  // scorpion
            ];
            var gift = possible_gifts[Math.floor(Math.random() * possible_gifts.length)];
            document.getElementById("gift").innerHTML = "It's a " + gift + "!";
        </script>

        <h5 class="completion-subheading" id="full-marks-page-note">Your score is <%= session[:correct_pts] %> / <%= session[:total_pts]%>!</h5>
    </div>

</div>