                "&#128021;", // dog
                "&#128008;", // cat
                "&#128005;", // tiger
                "&#128006;", // leopard
                "&#128014;", // horse
                "&#129420;", // deer
                "&#128002;", // ox
                "&#128003;", // water buffalo
                "&#128004;", // cow
                "&#128022;", // pig
                "&#128017;", // sheep
                "&#128042;", // camel
                "&#128043;", // two-hump camel
                "&#128024;", // elephant
                "&#129423;", // rhinoceros
                "&#128001;", // mouse
                "&#128007;", // rabbit
                "&#129415;", // bat
                "&#129411;", // turkey
                "&#128038;", // bird
                "&#128039;", // penguin
                "&#128010;", // crocodile
                "&#128034;", // turtle
                "&#129422;", // lizard
                "&#128013;", // snake
                "&#128009;", // dragon
                "&#128051;", // whale
                "&#128032;", // fish
                "&#129416;", // shark
